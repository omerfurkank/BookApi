@model WebApp.Models.Book.CreateBookModel

<div class="container">
    <form id="createBookForm" class="w-50 m-5 p-3 shadow mx-auto" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Name:</label>
            <input type="text" class="form-control" name="Name" id="Name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label for="AuthorId" class="form-label">AuthorId:</label>
            <input type="text" class="form-control" name="AuthorId" id="AuthorId" asp-for="AuthorId" />
        </div>

        <div class="mb-3">
            <button type="button" class="btn btn-primary w-100" id="saveButton">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function () {
            $('#saveButton').click(function () {
                var form = $('#createBookForm');
                var data = new FormData(form[0]);
              
                $.ajax({
                    url: '@Url.Action("Create", "Books")',
                    type: 'POST',
                    processData: false,
                    contentType: false,
                    data: data,
                    success: function (response) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Kitap başarıyla eklendi la!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '@Url.Action("GetList", "Books")';
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            title: 'Error!',
                            text: 'Kitap eklenirken bir hata oluştu.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            });
        });
    </script>
}
